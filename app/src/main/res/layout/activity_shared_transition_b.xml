<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="20dp"
            android:padding="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cute_cat"
            android:transitionName="@string/transition_image" />

    <Button
            android:id="@+id/transitionToAButtonAtActivityB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="14dp"
            android:text="Open Activity A"
            android:transitionName="@string/transition_button" />

    <Button
            android:id="@+id/transitionButtonAtActivityB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="14dp"
            android:text="Open Activity C"
            android:transitionName="@string/transition_button" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="20dp"
            android:text="ACTIVITY B"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
</LinearLayout>