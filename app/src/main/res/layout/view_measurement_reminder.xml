<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/animatedBackgroundAtMeasurementReminderView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/selector_measurement_reminder_background"
            android:scaleType="fitCenter"
            android:layout_width="130dp"
            android:layout_height="28dp"/>

    <TextView
            android:id="@+id/registerLabelAtMeasurementReminderView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/animatedBackgroundAtMeasurementReminderView"
            app:layout_constraintRight_toRightOf="@id/animatedBackgroundAtMeasurementReminderView"
            android:text="Register"
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/goodJobLabelAtMeasurementReminderView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="Good job!"
            android:textColor="@android:color/holo_green_dark"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/animatedBackgroundAtMeasurementReminderView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/animatedBackgroundAtMeasurementReminderView"/>

</android.support.constraint.ConstraintLayout>